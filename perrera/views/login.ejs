<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link rel="stylesheet"
          href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet"
          href="/css/misestilos.css">
</head>
<body>
<div class="container">
    <h1>Login</h1>

    <p>Ingresa tus credenciales</p>

    <form class = ""action="/login" method="post">

        <div class="row">
            <div class="col-sm-6">
                <div class ="form-group">
                    <% const existeu = typeof erroru !== "undefined" ? true : false; %>
                    <% const existep = typeof errorp !== "undefined" ? true : false; %>

                    <% if (existep || existeu){ %>

                        <p style="color:#FF0000" ;>Credenciales Incorrectas!!!!</p>

                    <% } %>

                    <label for="nombre">Usuario</label>
                    <input class="form-control" id="nombre" type="text" name="nombre">
                </div>
                <div class = form-group>
                    <label for="password">Password</label>
                    <input class = "form-control" id="password" type="password" name="password">
                </div>

            </div>
            <div class="col-sm-3"> <button type="submit" class="btn btn-info boton-esapciado btn-block btn-buscar">Login</button></div>

        </div>





    </form>

    <div class = row >
        <div class="col-sm-6"></div>
        <div class="col-sm-3"><a href="/Usuario/registro">
                <button type="button" class="btn btn-info boton-esapciado btn-block boton-abajo "> Ir a registrarme</button>
            </a></div>
    </div>






</div>
</body>
